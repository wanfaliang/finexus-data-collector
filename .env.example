# Database Configuration
DATABASE_URL=postgresql://finexus_user:your_password@localhost:5432/finexus_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_ECHO=False

# API Keys
FMP_API_KEY=your_fmp_api_key_here
FRED_API_KEY=your_fred_api_key_here

# Application Settings
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/finexus_collector.log
ENVIRONMENT=development

# API Rate Limiting
API_SLEEP_SEC=0.2
API_TIMEOUT=30
API_RETRIES=3
API_BACKOFF=0.7

# Data Collection Settings
DEFAULT_YEARS_HISTORY=10
BATCH_SIZE=100
MAX_WORKERS=5

# Job Scheduling (Cron expressions)
SCHEDULE_DAILY_PRICES=0 18 * * 1-5
SCHEDULE_FINANCIALS=0 19 * * *
SCHEDULE_ECONOMIC=0 8 * * *
SCHEDULE_ANALYST=0 10 * * *
SCHEDULE_INSIDER=0 11 * * *

# Feature Flags
INCLUDE_ANALYST_DATA=True
INCLUDE_INSTITUTIONAL_DATA=True
INCLUDE_INSIDER_DATA=True
INCLUDE_SP500=True
INCLUDE_ECONOMIC_DATA=True

# Data Validation
ENABLE_DATA_VALIDATION=True
ALERT_ON_STALE_DATA_DAYS=7

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
